<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>VELOPRO</title>
        <link rel="icon" href="img/favicon.png" />
        <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
        <link href="css/index.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    </head> 

    <body>
        <!-- Portfolio item 1 modal popup-->
        <div class="portfolio-modal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <a class="close-modal" href="/home"><img src="img/close-icon.svg" alt="Close modal" /></a>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <div class="modal-body">
                                <% eventos.forEach((evento) => { %>
                                    <h2 class="text-uppercase"><%= evento.nombre %></h2><br>
                                    <img class="img-fluid d-block mx-auto" src="img/portfolio/1.jpg" alt="..." />
                                    <strong>Descripci√≥n del evento</strong>
                                    <p><%= evento.descripcion %></p>
                                    <ul class="list-inline">
                                        <li>
                                            <strong>Fecha:</strong>
                                            <%= evento.fecha %>
                                        </li>
                                        <li>
                                            <strong>Lugar:</strong>
                                            <%= evento.lugar %>
                                        </li>
                                    </ul>
                                <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="js/index.js"></script>
        <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
        <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
    </body>
</html>
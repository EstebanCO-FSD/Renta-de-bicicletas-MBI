<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/img/favicon.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>VELOPRO</title>
  </head>

  <body class="body">

    <div>
        <div class="boxup">
            <a class="btn btn-light btnBack" href="/modalTwoA"><i class="bi bi-x-circle-fill" style="font-size: 20px;"></i></a>
            <center class="position">
            <h1>Datos de la Ruta</h1>
            <form method="POST" action="/rutas/crear">
                <div class="col-md-6">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input id="nombre" name="nombre" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="fecha" class="form-label">Fecha</label>
                    <input id="fecha" name="fecha" type="date" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="lugar" class="form-label">Lugar</label>
                    <input id="lugar" name="lugar" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="descripcion" class="form-label">Descripción</label>
                    <textarea id="descripcion" name="descripcion" type="text" class="form-control" required></textarea>
                </div><br>
                <button type="submit" class="w-50 btn btn-guardar btn-lg">Registrar</button>
            </form>
            </center>
        </div>
    </div>

    <div class="container">
        <center>
            <h1>Lista de rutas</h1>
            <br>
            <table id="tablaRutas" class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th style="display: none;">ID</th>
                        <th>Nombre</th>
                        <th>Fecha</th>
                        <th>Lugar</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% rutas.forEach((ruta) => { %>
                        <tr>
                            <td style="display: none;"><%= ruta._id %></td>
                            <td><%= ruta.nombre %></td>
                            <td><%= ruta.fecha %></td>
                            <td><%= ruta.lugar %></td>
                            <td><%= ruta.descripcion %></td>
                            <td>
                                <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                                <a href="/rutas/borrar/<%= ruta._id %>" class="btn btn-outline-danger bi bi-trash"></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </center>
    </div>
    

    <div id="modalRuta" class="modal fade" tabindex="-1" aria-labelledby="modalRuta" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h5 class="modal-title" id="exampleModalLabel">Editar Evento</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
              <form action="/rutas/editar" method="POST">
                <input type="text" name="id_editar" id="id_editar" hidden>
                <div class="mb-3">
                    <label for="nombre_editar" class="col-form-label">Nombre</label>
                    <input id="nombre_editar" name="nombre_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="fecha_editar" class="col-form-label">Fecha</label>
                    <input id="fecha_editar" name="fecha_editar" type="date" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="lugar_editar" class="col-form-label">Lugar</label>
                    <input id="lugar_editar" name="lugar_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="descripcion_editar" class="col-form-label">Descripción</label>
                    <input id="descripcion_editar" name="descripcion_editar" type="text" class="form-control" value="">
                </div>
            </div>

            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>

            </form>
            
          </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="js/modalRutas.js"></script>

  </body>
</html>